<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/card_rounded"
    android:padding="8dp"
    android:layout_marginBottom="16dp"
    >

    <TextView
        android:id="@+id/tv_header_basetext"
        android:drawableLeft="@drawable/ic_plugin_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_header_num_plugins"
        android:textColor="@color/text_default"
        android:textSize="20sp"
        android:text="@string/plugins_found"
        />

    <TextView
        android:id="@+id/tv_header_num_plugins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_header_basetext"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/text_default"
        android:textSize="20sp"
        tools:text="5"
        />


</android.support.constraint.ConstraintLayout>